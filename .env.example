# FANWS Environment Variables
# Copy this file to .env and fill in with your actual API keys

# OpenAI API Key for GPT-3.5/GPT-4 integration
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key for Claude integration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# X (formerly Twitter) AI API Key
XAI_API_KEY=your_xai_api_key_here

# WordsAPI Key for word/synonym lookups
WORDS_API_KEY=your_words_api_key_here

# Optional: Set to development or production
FANWS_ENV=development

# Optional: Set log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

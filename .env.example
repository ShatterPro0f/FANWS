# FANWS Environment Variables
# Copy this file to .env and fill in with your actual API keys

# OpenAI API Key for GPT-3.5/GPT-4 integration
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key for Claude integration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# X (formerly Twitter) AI API Key (Grok)
XAI_API_KEY=your_xai_api_key_here

# WordsAPI Key for word/synonym lookups (Thesaurus API)
WORDS_API_KEY=your_words_api_key_here
THESAURUS_API_KEY=your_words_api_key_here

# Web-based tool credentials for Selenium automation
# Sassbook AI (https://sassbook.com/ai-writer)
SASSBOOK_USER=your_sassbook_email
SASSBOOK_PASS=your_sassbook_password

# Rytr (https://rytr.me)
RYTR_USER=your_rytr_email
RYTR_PASS=your_rytr_password

# Grammarly (https://grammarly.com)
GRAMMARLY_USER=your_grammarly_email
GRAMMARLY_PASS=your_grammarly_password

# Optional: Set to development or production
FANWS_ENV=development

# Optional: Set log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
